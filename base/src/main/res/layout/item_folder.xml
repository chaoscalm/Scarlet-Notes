<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginHorizontal="2dp"
  app:cardBackgroundColor="@color/white"
  app:cardCornerRadius="8dp"
  app:cardElevation="4dp"
  app:cardUseCompatPadding="true"
  app:cardPreventCornerOverlap="false">

  <LinearLayout
    android:id="@+id/folder_panel"
    style="@style/BorderedBackgroundView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <com.github.bijoysingh.uibasics.views.UITextView
        android:id="@+id/ui_information_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        app:icon="@drawable/ic_notebook"
        app:iconSize="18sp"
        app:iconTextGap="@dimen/spacing_small"
        app:iconTint="@color/light_secondary_text"
        app:text="@string/folder_card_title"
        app:textColor="@color/light_secondary_text"
        app:textSize="@dimen/font_size_small" />

      <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="4"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="@dimen/spacing_small"
        android:textColor="@color/light_primary_text"
        android:textColorHint="@color/light_tertiary_text"
        android:textSize="@dimen/font_size_xlarge"
        android:textStyle="bold" />

    </LinearLayout>


    <View
      android:layout_height="match_parent"
      android:layout_width="2.75dp"
      android:background="@color/light_hint_text" />

    <View
      android:layout_height="match_parent"
      android:layout_width="0.75dp"
      android:background="@color/code_light" />

    <View
      android:layout_height="match_parent"
      android:layout_width="2.5dp"
      android:background="@color/light_hint_text" />

    <View
      android:layout_height="match_parent"
      android:layout_width="0.75dp"
      android:background="@color/code_light" />

    <View
      android:layout_height="match_parent"
      android:layout_width="2.25dp"
      android:background="@color/light_hint_text" />
  </LinearLayout>
</androidx.cardview.widget.CardView>