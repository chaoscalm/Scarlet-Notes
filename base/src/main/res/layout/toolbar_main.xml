<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/mainToolbar"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:orientation="horizontal"
  android:paddingHorizontal="@dimen/spacing_small"
  android:paddingTop="@dimen/main_toolbar_top_padding"
  android:paddingBottom="@dimen/main_toolbar_bottom_padding">

  <ImageView
    android:id="@+id/leftIcon"
    android:layout_width="@dimen/main_toolbar_icon_size"
    android:layout_height="@dimen/main_toolbar_icon_size"
    android:padding="@dimen/spacing_xsmall"
    android:src="@mipmap/ic_launcher" />

  <TextView
    android:id="@+id/title"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/transparent"
    android:ellipsize="end"
    android:gravity="center_vertical"
    android:maxLines="1"
    android:text="@string/app_name"
    android:textColor="@color/light_secondary_text"
    android:textSize="@dimen/app_name_size"
    android:textStyle="bold" />

  <ImageView
    android:id="@+id/searchIcon"
    android:layout_width="@dimen/main_toolbar_icon_size"
    android:layout_height="@dimen/main_toolbar_icon_size"
    android:padding="@dimen/spacing_xsmall"
    android:src="@drawable/icon_search"
    style="@style/BorderlessBackgroundView" />

  <ImageView
    android:id="@+id/settingsIcon"
    android:layout_width="@dimen/main_toolbar_icon_size"
    android:layout_height="@dimen/main_toolbar_icon_size"
    android:padding="@dimen/spacing_xsmall"
    android:src="@drawable/icon_settings"
    style="@style/BorderlessBackgroundView" />

</LinearLayout>