<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/FormatLayout">

  <include layout="@layout/layout_format_drag_handle" />

  <View
    android:id="@+id/extra_margin"
    android:layout_width="@dimen/spacing_normal"
    android:layout_height="match_parent" />

  <View
    android:id="@+id/quoteColorView"
    android:layout_width="3dp"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/spacing_xxsmall"
    android:layout_marginTop="@dimen/spacing_xxsmall"
    android:background="@color/light_hint_text"
    android:layout_marginBottom="@dimen/spacing_xxsmall" />

  <TextView
    android:id="@+id/text"
    style="@style/FormatText"
    android:autoLink="web"
    android:linksClickable="true"
    android:layout_marginStart="@dimen/spacing_small" />

  <EditText
    android:id="@+id/edit"
    style="@style/FormatText"
    android:imeOptions="flagNoExtractUi"
    android:layout_marginStart="@dimen/spacing_small" />

</LinearLayout>